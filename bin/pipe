#! /usr/bin/env node

var pipe = require('fcpipe')
var argv = process.argv;

if (argv.length < 3) {
    pipe.start();
} else if (argv.length < 4) {
    pipe.start(+argv[2]);
} else {
    if (argv[3] == '-debug') {
        pipe.start(+argv[2]);
        process._debugProcess(process.pid);
    } else {
        pipe.start(+argv[2], argv[3]);
    }
}